import unittest
import math
from calculator import (add, sub, subtract, mul, multiply,
                        div, divide, log, logarithm,
                        exp, exponent, square_root, hypotenuse)

class TestCalculator(unittest.TestCase):

    # Partner 2's tests
    def test_add(self):
        self.assertEqual(add(2, 3), 5)
        self.assertEqual(add(-1, 1), 0)
        self.assertEqual(add(0, 0), 0)
        self.assertEqual(add(2.5, 3.5), 6.0)

    def test_subtract(self):
        self.assertEqual(sub(5, 3), 2)
        self.assertEqual(sub(0, 5), -5)
        self.assertEqual(sub(-1, -1), 0)
        self.assertEqual(sub(2.5, 1.5), 1.0)

    def test_divide_by_zero(self):
        with self.assertRaises(ZeroDivisionError):
            div(0, 10)

    def test_logarithm(self):
        self.assertAlmostEqual(log(10, 100), 2.0)
        self.assertAlmostEqual(log(math.e, 1), 0.0)
        self.assertAlmostEqual(log(2, 8), 3.0)
        self.assertAlmostEqual(log(10, 1000), 3.0)

    def test_log_invalid_base(self):
        with self.assertRaises(ValueError):
            log(0, 5)
        with self.assertRaises(ValueError):
            log(1, 5)
        with self.assertRaises(ValueError):
            log(-2, 5)
        with self.assertRaises(ValueError):
            log(10, -5)
        with self.assertRaises(ValueError):
            log(10, 0)

    # Partner 1's tests
    def test_multiply(self):
        self.assertEqual(multiply(3, 4), 12)
        self.assertEqual(multiply(-2, 5), -10)
        self.assertEqual(multiply(0, 10), 0)
        self.assertAlmostEqual(multiply(2.5, 2), 5.0)

    def test_divide(self):
        self.assertEqual(divide(10, 40), 4.0)
        self.assertEqual(divide(2, 10), 5.0)
        self.assertAlmostEqual(divide(1, 3), 0.3333333333333333)
        self.assertEqual(divide(-5, 20), -4.0)

    def test_log_invalid_argument(self):
        with self.assertRaises(ValueError):
            logarithm(10, 0)
        with self.assertRaises(ValueError):
            logarithm(10, -5)
        with self.assertRaises(ValueError):
            logarithm(2, -1)

    def test_hypotenuse(self):
        self.assertAlmostEqual(hypotenuse(3, 4), 5.0)
        self.assertAlmostEqual(hypotenuse(5, 12), 13.0)
        self.assertAlmostEqual(hypotenuse(8, 15), 17.0)
        self.assertAlmostEqual(hypotenuse(0, 5), 5.0)
        self.assertAlmostEqual(hypotenuse(-6, 8), 10.0)

    def test_sqrt(self):
        self.assertEqual(square_root(16), 4.0)
        self.assertEqual(square_root(0), 0.0)
        self.assertAlmostEqual(square_root(2), 1.4142135623730951)
        self.assertAlmostEqual(square_root(100), 10.0)
        with self.assertRaises(ValueError):
            square_root(-1)

if __name__ == '__main__':
    unittest.main()
